<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.bookshare.viewmodel.ProfileViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:id="@+id/topAppBar"
            android:layout_height="250dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/main_collapsing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp"
                >

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                </androidx.appcompat.widget.Toolbar>

                <ImageView
                    android:id="@+id/main_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    android:src="@drawable/circles_3"
                    app:layout_collapseMode="parallax"
                    />

                <ImageView
                    android:layout_margin="30dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:imageUrl="@{viewModel.user.photoUrl}"
                    tool:src="@drawable/purple_circle" />

                <TextView
                    android:layout_gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tool:text="Display name"
                    android:text="@{viewModel.user.displayName}"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_edit_black_24dp"
            android:onClick="@{()->viewModel.jumpToEditProfile()}"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="10dp"
            app:elevation="0dp"
            app:backgroundTint="@color/colorPrimaryAlpha"
            app:borderWidth="5dp"
            app:layout_anchor="@id/topAppBar"
            app:layout_anchorGravity="bottom|right|end"/>

        <Button
            android:theme="@style/MaterialButtonPrimaryColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:onClick="@{()->viewModel.logoutUser()}"
            android:textSize="15dp"
            android:text="Log out"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
