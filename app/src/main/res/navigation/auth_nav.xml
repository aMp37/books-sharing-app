<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.bookshare.ui.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_loginFragment_to_authSplashFragment"
            app:destination="@id/authSplashFragment"
            app:enterAnim="@anim/auth_splash_enter_anim"
            app:exitAnim="@anim/auth_splash_exit_anim"
            app:popEnterAnim="@anim/auth_splash_enter_anim"
            app:popExitAnim="@anim/auth_splash_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.bookshare.ui.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="false" />
        <action
            android:id="@+id/action_signUpFragment_to_authSplashFragment"
            app:destination="@id/authSplashFragment"
            app:enterAnim="@anim/auth_splash_enter_anim"
            app:exitAnim="@anim/auth_splash_exit_anim"
            app:popEnterAnim="@anim/auth_splash_enter_anim"
            app:popExitAnim="@anim/auth_splash_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/authSplashFragment"
        android:name="com.example.bookshare.ui.AuthSplashFragment"
        android:label="fragment_auth_splash"
        tools:layout="@layout/fragment_auth_splash">
        <action
            android:id="@+id/action_authSplashFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.bookshare.ui.MainActivity"
        android:label="activity_main2"
        tools:layout="@layout/activity_main2" />
</navigation>